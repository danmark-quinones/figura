{{ 'navigation.css' | asset_url | stylesheet_tag }}

<div class="relative navigation-container">
  <div>
    <div class="flex justify-between items-center">

      {% if data.shop_name != blank %}
        <p class="navigation-logo">{{ data.shop_name }}</p>
      {% else %}
        <p class="navigation-logo">SHOP NAME</p>
      {% endif %}

      <nav class="flex justify-between items-center">

        {% for link in linklists.main-menu.links %}
          <div class="mx-5 text-blue hover:text-black">
            <a href="{{link.url}}">{{ link.title }}</a>
          </div>
        {% endfor %}
      </nav>

      <div class="flex justify-between  items-center">
        <div class="mx-5 text-blue hover:text-black">
          <a href="{{routes.cart_url}}">Cart({{ cart.item_count }})</a>
        </div>
        {% comment %} <div class="mx-5 text-blue hover:text-black">
        <a href="#">Login</a>
        </div>
        <div class="mx-5 text-blue hover:text-black">
        <a href="#">Register</a>
        </div> {% endcomment %}
      </div>
    </div>
  </div>
</div>