{{ 'product.css' | asset_url | stylesheet_tag }}
<div class="product-card-container">

  <div class="product-card-img-container">
    <img src="{{product.featured_image | img_url:'300x300'}}" />
  </div>
  <a href="{{product.url}}">
    <p class="product-card-title">{{ product.title }}</p>
  </a>
  <p class="product-card-price">{{ product.price | money }}</p>


  {% comment %}
  <div>
  <button
  title="{{product.title}}"
  price="{{product.price}}"
  onclick="setData(this)"
  class="open-notif">
  OPEN NOTIF
  </button>
  </div>
  {% if show_buttons == true %}
  <form
  method="POST"
  action="/cart/add"
  novalidate>
  <input
  type="hidden"
  name="id"
  value="{{ product.variants.first.id }}" />
  <input
  min="1"
  type="hidden"
  id="quantity"
  name="quantity"
  value="1" />
  <input
  type="hidden"
  name="return_to"
  value="back" />
  <input
  type="submit"
  value="Add to cart"
  class="primary-btn py-2 px-5 text-white rounded hover:bg-yellow mt-3 w-full" />
  </form>

  {% endif %}
  {% endcomment %}</div>