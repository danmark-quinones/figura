<div class="p-5">

  <div class="w-full h-150 overflow-hidden">
    <img
      class="w-full h-full"
      src="{{product.featured_image | img_url:'Large'}}"
      height="200"
      width="100"
      alt="{{product.title}}"
      loading="lazy" />
  </div>
  <div>
    <h3 class="font-bold text-2xl">{{ product.title }}</h3>

    <div class="flex justify-between items-center">
      <p class="product-price font-sm text-xl mr-3">{{ product.price | money }}</p>
      {% if section.settings.price_comparison %}
        <p class="product-max-price line-through">{{ product.compare_at_price_max | money }}</p>
      {% endif %}
    </div>

    <hr/>

    {% if section.settings.show_stocks %}
      <div>
        {% for variant in product.variants %}
          {% if variant.inventory_quantity == 0 %}
            <p>SOLD OUT</p>
          {% else %}
            <p>Stocks : {{ variant.inventory_quantity }}</p>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}

    <div class="my-3">
      {% if section.settings.desc_label != blank %}
        <p class="mb-3 text-sm text-gray-500" for="quantity">
          {{ section.settings.desc_label }}
        </p>
      {% endif %}
      <p>{{ product.description }}</p>
    </div>
  </div>

  <hr/>

  {% if product.variants[0].inventory_quantity == 0 %}
    <p>WE DO NOT HAVE A STOCK FOR THIS ACTION FIGURE</p>
  {% else %}
    <form
      method="POST"
      action="/cart/add"
      novalidate>
      <div>
        <input
          type="hidden"
          name="id"
          value="{{ product.variants.first.id }}" />
        <div class="flex items-center">
          {% if section.settings.qty_label != blank %}
            <label class="mr-5" for="quantity">
              {{ section.settings.qty_label }}
            </label>
          {% endif %}
          <input
            class="w-100 rounded my-3 text-center"
            style="border: 2px solid #2f2f2f;"
            min="1"
            type="number"
            id="quantity"
            name="quantity"
            value="1" />
        </div>

        <input
          type="hidden"
          name="return_to"
          value="back" />
        <input
          type="submit"
          value="Add to cart"
          class="primary-btn w-full py-3 rounded text-white uppercase" />
      </div>
    </form>

    <form method="POST" action="/cart/add">
      <div>
        <input
          type="hidden"
          name="id"
          value="{{ product.variants.first.id }}" />
        <input
          min="1"
          type="hidden"
          id="quantity"
          name="quantity"
          value="1" />

        <input
          type="hidden"
          name="return_to"
          value="/checkout/" />
        <input
          type="submit"
          value="Buy Now"
          class="secondary-btn w-full py-3 rounded text-white uppercase mt-3" />
      </div>
    </form>

  {% endif %}

</div>

{% schema %}
  {
    "name": "Product Information",
    "presets": [
      {
        "name": "âš¡Product Information"
      }
    ],
    "settings": [
      {
        "type": "checkbox",
        "id": "show_stocks",
        "label": "Show Stocks"
      }, {
        "type": "checkbox",
        "id": "price_comparison",
        "label": "Show Old Price?"
      }, {
        "type": "text",
        "id": "qty_label",
        "label": "Quantity Field Label"
      }, {
        "type": "text",
        "id": "desc_label",
        "label": "Description Label"
      }
    ],
    "blocks": []
  }
{% endschema %}