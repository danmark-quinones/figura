<div>
  {% if section.settings.hero_image != blank %}
    <img
      loading="lazy"
      src="{{section.settings.hero_image | img_url: 'large'}}"
      alt="hero"
      width="500"
      height="200" />
  {% endif %}
  {% if section.settings.header_text != blank %}
    <div>
      <p>{{ section.settings.header_text }}</p>
    </div>
  {% endif %}
  {% if section.settings.sub_header != blank %}
    <div>
      <p>{{ section.settings.sub_header }}</p>
    </div>
  {% endif %}
</div>


