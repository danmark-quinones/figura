{{ 'home.css' | asset_url | stylesheet_tag }}

<div class="relative collection-container">
  {% if section.settings.collection_header != blank %}
    <p class="section-header">{{ section.settings.collection_header }}</p>
  {% endif %}

  {% if section.settings.collection_description != blank %}
    <p class="section-description">{{ section.settings.collection_description }}</p>
  {% endif %}
  <div class="grid-flow-col gap-4 grid grid-rows-1 collection-list-container">
    {% for block in section.blocks %}
      {%- case block.type -%}
        {% when 'collection' %}
        {% render 'collection-card', collection: block.settings.featured_collection %}
      {%- endcase -%}
    {% endfor %}
  </div>

  <p class="text-center mt-5">
    <a href="/collections">See All Collections</a>
  </p>
</div>

{% schema %}
  {
    "name": "Featured Collection",
    "presets": [
      {
        "name": "⚡Featured Collection"
      }
    ],
    "settings": [
      {
        "type": "text",
        "id": "collection_header",
        "label": "⚡Collection Header Text"
      }, {
        "type": "text",
        "id": "collection_description",
        "label": "⚡Collection Description Text"
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "limit": 6,
        "name": "⚡Collection",
        "settings": [
          {
            "type": "collection",
            "id": "featured_collection",
            "label": "⚡Featured Collection"
          }
        ]
      }
    ]
  }
{% endschema %}