<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <title>
      {{ page_title }}
    </title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">
    <link
      rel="preconnect"
      href="https://cdn.shopify.com"
      crossorigin>

    {{ content_for_header }}

    {{ 'application.css' | asset_url | stylesheet_tag }}
    {{ 'main.css' | asset_url | stylesheet_tag }}
    <script src="{{'application.js'|asset_url}}" defer="defer"></script>
    <script src="{{'cart-notification.js'|asset_url}}" defer="defer"></script>
    <script src="{{'cart.js'|asset_url}}" defer="defer"></script>

    <script type="application/json" data-ajax-cart-initial-state>
      {{ cart | json }}
    </script>

    <script type="module">
      import '{{ "liquid-ajax-cart-v1.10.3.js" | asset_url }}';
    </script>

  </head>

  <body class="main-container">

    {% section 'header' %}

    <main role="main">


      <div id="mobile-menu" class="mobile-menu">
        {% render 'mobile-menu' %}
      </div>


      {{ content_for_layout }}

    </main>

    {% section 'footer' %}

    <script type="module">
      import { getCartState, subscribeToCartStateUpdate } from '{{ "liquid-ajax-cart-v1.10.3.js" | asset_url }}';
      import { setData } from '{{ "cart.js" | asset_url }}';
      subscribeToCartStateUpdate( state => { setData(state.cart.items[0]) ; console.log('Updated state: ', state.cart.items[0]);});

    </script>
  </body>
</html>